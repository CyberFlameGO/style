.zi-card
  p.zi-comment include icon
  .zi-input-group
    span.zi-label
      i.zi-icon-mail
    input.zi-input(placeholder='The Evil Rabbit')
  br
  p.zi-comment include text
  .zi-input-group
    span.zi-label zeit.co/teams
    input.zi-input(value='Zeit')
