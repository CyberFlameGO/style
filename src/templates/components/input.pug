  p.zi-comment Normal
  p
    input.zi-input(placeholder='The Evil Rabbit')
  br
  p.zi-comment.disabled Disabled
  p
    input.zi-input.disabled(placeholder='The Evil Rabbit' disabled)
  br
  p.zi-comment Error
  p
    input.zi-input.error(value='The Evil Rabbit')
  br
  p.zi-comment Success
  p
    input.zi-input.success(value='The Evil Rabbit')

