@import "../../styles/vars/index.styl"
@import "../../styles/responsive.styl"

body, html
  overflow-x hidden

  +layout(xs)
    font-size 12px

.ex-layout
  display flex
  max-width 1100px
  margin 0 auto

.ex-content
  display flex
  flex 1
  flex-direction column

.ex-content
  +layout(xs)
    width 100%
    flex 1
  +layout(sm)
    width 100%
    flex 1

