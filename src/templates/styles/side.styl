@import "../../styles/methods.styl"

.ex-side
  display flex
  min-width 200px

  a
   font-size .9em

.ex-side-content
  position fixed
  width 185px
  overflow-y auto
  overflow-x hidden
  height calc(100% - 10vh)
  -ms-overflow-style none

  &::-webkit-scrollbar
    width: 0 !important
    display none !important

  li
    list-style none
    &:before
      content ''

  ul
    margin-left 0

.zi-title
  color var(--accents-3)
  text-transform uppercase
  font-size .8em

.ex-side, .ex-side-content
  +layout(sm)
    min-width 100px
    width 100px

.ex-side
  +layout(xs)
    position fixed
    top 0
    left 0
    right 0
    height 4rem
    overflow hidden
    z-index 10
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .12);

.ex-side-content
  +layout(xs)
    width 100%
    height 4rem
    overflow hidden
    box-shadow 0 2px 5px 0 rgba(0, 0, 0, .12);

    &::before
      content 'Geist Style'
      position absolute
      height 4rem
      top 0
      left 0
      right 0
      background-color var(--geist-background)
      text-align center
      line-height 4rem
      font-size 1.2rem

    &.active
      height calc(100% - 30vh)
      overflow-y auto
      overflow-x hidden

.ex-content
  +layout(xs)
    padding-top 5rem

.zi-main
  +layout(xs)
    padding-left 1rem
    padding-right 1rem
