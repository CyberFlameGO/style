.zi-input
  font-family var(--font-sans)
  padding 0 rem(11)
  display inline-flex
  vertical-align middle
  align-items center
  border-radius var(--geist-radius)
  background-color transparent
  font-size .875rem
  height rem(37)
  line-height rem(27)
  width initial
  outline 0
  box-sizing border-box
  margin 4px 10px
  border 1px solid var(--accents-2)
  -webkit-appearance none
  transition border 0.2s ease, color 0.2s ease

  &:focus
    border-color var(--accents-5)

  &.disabled
    background var(--accents-1)
    cursor not-allowed

  &.error
    color var(--geist-error)
    border-color var(--geist-error)

  &.success
    color var(--geist-success)
    border-color var(--geist-success)

  &.small
    font-size .75rem
    height rem(32)
    line-height rem(22)

  &.mini
    font-size .75rem
    height rem(28)
    line-height rem(20)

  &.big, &.huge
    font-size 1rem
    height rem(42)
    line-height rem(38)

.zi-input-group-empty
  display inline-flex
  border-radius var(--geist-radius)
  background-color transparent

  input
    flex 1
    margin 0

.zi-input-group
  display inline-flex
  border-radius var(--geist-radius)
  background-color transparent

  input
    flex 1
    margin 0

  >.zi-label
    display inline-flex
    justify-content center
    align-items center
    background-color var(--accents-1)
    border-radius var(--geist-radius)
    border-bottom 1px solid var(--accents-2)
    border-top 1px solid var(--accents-2)
    color var(--accents-6)
    font-size rem(14)
    line-height 1
    width initial
    padding 0 rem(10)
    user-select none

    i
      margin 0 rem(4)

  &.suffix
    input
      border-top-right-radius 0
      border-bottom-right-radius 0

    >.zi-label.suffix
      border-left none
      border-right 1px solid var(--accents-2)
      border-top-left-radius 0
      border-bottom-left-radius 0

  &.prefix
    input
      border-top-left-radius 0
      border-bottom-left-radius 0

    >.zi-label.prefix
      border-right none
      border-left 1px solid var(--accents-2)
      border-top-right-radius 0
      border-bottom-right-radius 0

.zi-input-group-empty, .zi-input-group
  &.clearable
    position relative

    input
      padding-right rem(28)

    i.close
      color #9b9b9b
      font-size inherit
      position absolute
      top 50%
      right rem(6)
      padding 0 rem(5)
      transform translateY(-50%) scale(1.45)
      z-index 1
      background-color transparent
      cursor pointer
      transition all .15s ease





