pre
  mono()
  light()
  background-color transparent
  border 1px solid #eaeaea
  margin 0
  padding rem(20)
  font-size rem(14)
  overflow auto
  white-space pre
  line-height rem(20)

  &.zi-bash:before
    content '$ '

  span, p
    font-size inherit
    color inherit

  code
    font-size inherit
    color inherit

    &:before, &:after
      content ''

pre.dark
  background black
  color: white

code
  mono()
  font-size 0.9em
  color #d400ff
  white-space pre-wrap

  &:before, &:after
    content '`'

.zi-bash
  pre:before
    content '$ '
