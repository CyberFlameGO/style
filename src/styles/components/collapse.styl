.zi-collapse
  text-align left
  border-bottom 1px solid #eaeaea

  &:first-child
    border-top 1px solid #eaeaea


.zi-collapse-title
  min-height rem(75)
  width 100%
  display flex
  justify-content space-between
  align-items center
  font-size rem(20)
  color black
  text-transform none
  margin 0
  cursor pointer

  >i
    font-size rem(24)
    font-weight lighter

.zi-collapse-content
  width 100%
  padding-bottom rem(20)
  transition height 0.2s ease












